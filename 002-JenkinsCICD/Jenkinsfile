pipeline {
    agent any 
    environment{
        registryUrl = "ghcr.io/chance2021/devopsdaydayup"
        registryCredentialsId = '<dockerhub-credential-name>'        
        commitID = sh(script: 'git rev-parse --short HEAD', returnStdout:true).trim()
    }
    stages {
        stage('Build Image') { 
            steps {
                // 
                sh"whoami"
