                    dockerImage = docker.build("$registryUrl:$commitID","./002-JenkinsCICD")
                }
            }
        }
        stage('Push Image') { 
            steps {
                // 
                echo "This is Test"
            }
        }
        stage('Deploy') { 
            steps {
                // 
                echo "This is Deploy"
               // script {
               //     docker.withRegistry( '', registryCredential ) {
               //     dockerImage.push()
               // }
            }
        }
    }
}
